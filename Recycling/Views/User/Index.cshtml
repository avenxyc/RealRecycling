@model IEnumerable<Recycling.Domain.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.ActionLink("Projects", "Projects", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                 @if (item.Role != "Admin")
                 {
                     @Html.Raw(" | ");
                     @Html.ActionLink("Delete", "Delete", "User", new { id = item.Id }, new { onclick = "return confirm('Do you want to proceed?');" })
                    
                 }
            </td>
        </tr>
    }

</table>
