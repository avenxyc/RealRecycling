<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Recycling</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Recycling", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if ((String)Session["Role"] == "Admin")
                    {
                        @*<li>@Html.ActionLink("User", "Index", "User")</li>
                            <li>@Html.ActionLink("Company", "Index", "Company")</li>
                            <li>@Html.ActionLink("Project", "Index", "Project")</li>*@
                    }
                    else if ((String)Session["Role"] == "User")
                    {
                        <li>@Html.ActionLink("Your  Projects", "UserProject", "Project")</li>
                    }

                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Welcome " + HttpContext.Current.User.Identity.Name + ", Log out", "Logout", "User", null, null)</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Products", "Index", "Product", null, null)</li>
                        <li>@Html.ActionLink("Constituents", "Index", "Constituent", null, null)</li>
                        <li>@Html.ActionLink("Regions", "Index", "Region", null, null)</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="col-sm-12">
            <hr />
            <p>&copy; @DateTime.Now.Year - Recycling Project</p>
            <p>Author: Yichuan Xu</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
